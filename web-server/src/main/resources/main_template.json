{
  "template": "*_main",
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "shingle_filter": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 5
        },
        "phrase_shingle": {
          "type": "shingle",
          "output_unigrams": true,
          "min_shingle_size": 2,
          "max_shingle_size": 3
        }
      },
      "analyzer": {
        "bigram": {
          "tokenizer": "bigram_tokenizer"
        },
        "shingle_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "shingle_filter"
          ]
        },
        "phrase_shingle_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "phrase_shingle"
          ]
        },
        "whitespace": {
          "tokenizer": "standard",
          "filter": "lowercase"
        }
      },
      "tokenizer": {
        "bigram_tokenizer": {
          "type": "nGram",
          "min_gram": 2,
          "max_gram": 2,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
    "article": {
      "_source": {"enabled": true},
      "properties": {
        "title": {
          "type": "string",
          "index_analyzer": "standard",
          "search_analyzer": "standard",
          "fields": {
            "single": {
              "type": "string",
              "index_analyzer": "shingle_analyzer"
            }
          }
        },
        "bodyText": {
          "type": "string",
          "index_analyzer": "standard",
          "search_analyzer": "standard"
        },
        "mimeType": {
          "type": "string"
        },
        "md5": {
          "type": "string",
          "index": "not_analyzed"
        },
        "label": {
          "type": "string",
          "index": "not_analyzed"
        },
        "saveDate": {
          "type": "long",
          "index": "not_analyzed"
        },
        "metadata": {
          "type": "object"
        },
        "suggest_completion": {
          "type": "completion",
          "index_analyzer": "standard",
          "search_analyzer": "standard",
          "payloads": true
        },
        "suggest_phrase": {
          "type": "string",
          "analyzer": "phrase_shingle_analyzer"
        }
      }
    }
  }
}